<h1>Listing comments</h1>

<table>
  <tr>
    <th>Comment</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @comments.each do |comment| %>
  <tr>
    <td><%= comment.comment %></td>
    <td><%= link_to 'Show', song_comment_path([comment.song, comment]) %></td>
    <td><%= link_to 'Edit', edit_song_comment_path([comment.song, comment]) %></td>
    <td><%= link_to 'Destroy', [comment.song, comment], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= render partial: "comments", locals: {comments: @comments} %>


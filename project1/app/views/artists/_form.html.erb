<%= form_for(@artist) do |f| %>
  <% if @artist.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@artist.errors.count, "error") %> prohibited this artist from being saved:</h2>

      <ul>
      <% @artist.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :age %><br />
    <%= f.number_field :age %>
  </div>
  <div class="field">
    <%= f.label :city %><br />
    <%= f.text_field :city %>
  </div>
  <div class="field">
    <%= f.label :genre %><br />
    <%= f.select :genre, options_for_select(["Rap", "Pop" ])%>
  </div>


   <div class="field">
    <%= f.label :profile_picture %><br />
    <%= f.file_field :profile_picture %>
  </div>



  <div class="field">
    <%= f.label :show %><br />
    <%= f.file_field :show %>
  </div>
  <div class="field">
    <%= f.label :show2 %><br />
    <%= f.file_field :show2 %>
  </div>
  <div class="field">
    <%= f.label :show3 %><br />
    <%= f.file_field :show3 %>
  </div>
  <div class="field">
    <%= f.label :show4 %><br />
    <%= f.file_field :show4 %>
  </div>
  <div class="field">
    <%= f.label :show5 %><br />
    <%= f.file_field :show5 %>
  </div>

   <div class="field">
    <%= f.label :background %><br />
    <%= f.file_field :background %>
  </div>

<div class="songs">

  <%= render partial: "shared/songs", locals: {songs: @artist.songs} %>

</div>

<%=link_to 'Add songs', new_song_path %>

  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
